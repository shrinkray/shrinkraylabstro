---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import Banner from '~/components/widgets/Banner.astro';
import Background from '~/components/widgets/Background.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
const page = {
	title: 'Origins, experience and aspirations',
	description:
		'Building a consulting business is a journey. This is the story of how I got here and where I want to go.',
};
const items = []
---

<Layout {meta}>
	<Banner {page} />
	<Background {items} />
</Layout>
